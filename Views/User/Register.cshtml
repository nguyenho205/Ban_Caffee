@model Ban_Caffee.Models.ViewModel.CustomerRegisterViewModel

<div class="container">
    <div class="login-container mt-4" style="width: 400px; margin:auto">
        <div class="card shadow-lg p-3">
            <h3 class="card-title text-center fw-bold mb-4">Đăng ký</h3>

            @using (Html.BeginForm("Register", "User", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Nhập email của bạn" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Mật khẩu</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label for="FullName" class="form-label">Họ và tên</label>
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label for="Phone" class="form-label">Số điện thoại</label>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-coffee w-100 mb-3">ĐĂNG KÝ</button>

                <p class="text-center">
                    Đã có tài khoản? <a href="@Url.Action("Login", "User")" class="fw-bold">Đăng nhập</a>
                </p>
            }

            @if (TempData["RegisterSuccess"] != null)
            {
                <div class="alert alert-success text-center mt-3">@TempData["RegisterSuccess"]</div>
            }
        </div>
    </div>
</div>
