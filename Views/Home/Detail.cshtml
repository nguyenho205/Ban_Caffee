@model Ban_Caffee.Models.Product

@{
    ViewData["Title"] = "Chi tiết - " + Model.ProductName;
    
    // Hứng dữ liệu danh sách liên quan từ Controller
    // LƯU Ý: Trong Controller bạn phải gán: ViewBag.SanphamLienQuan = ...
    var listLienQuan = ViewBag.SanphamLienQuan as List<Ban_Caffee.Models.Product>;
}

<style>
    .main-image-container {
        width: 100%;
        height: 400px; /* Tăng chiều cao lên chút cho đẹp */
        border-radius: 15px;
        overflow: hidden;
        background-color: #fff;
        border: 1px solid #eee;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #mainImage {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

    /* Thumbnail ảnh nhỏ */
    .img-thumbnail {
        width: 80px;
        height: 80px;
        object-fit: cover;
        cursor: pointer;
        border: 2px solid transparent;
        border-radius: 10px;
        transition: all 0.2s;
    }

    .img-thumbnail:hover, .active-thumb {
        border-color: #6f4e37; /* Màu nâu chủ đạo */
        transform: scale(1.05);
    }

    /* Giá tiền */
    .product-price {
        color: #c0392b; /* Màu đỏ nhấn */
        font-size: 2.2rem;
        font-weight: 800;
        font-family: sans-serif;
    }

    /* Button Mua hàng */
    .btn-add-cart-big {
        background-color: #6f4e37;
        color: white;
        padding: 12px 30px;
        font-size: 1.1rem;
        border-radius: 30px;
        border: none;
        transition: 0.3s;
    }
    .btn-add-cart-big:hover {
        background-color: #3e2723; /* Nâu đậm hơn */
        color: white;
    }
    
    /* Card sản phẩm liên quan */
    .related-card img {
        height: 180px;
        object-fit: cover;
    }
</style>

<div class="container mt-5 mb-5">
    
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" style="color: #6f4e37;">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.ProductName</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="main-image-container shadow-sm mb-3">
                <img id="mainImage" src="@(string.IsNullOrEmpty(Model.Img) ? "/img/default.png" : Model.Img)" alt="@Model.ProductName">
            </div>
            
            <div class="d-flex justify-content-center gap-2">
                <img class="img-thumbnail active-thumb" 
                     src="@(string.IsNullOrEmpty(Model.Img) ? "/img/default.png" : Model.Img)" 
                     onclick="changeImage(this)" 
                     alt="Ảnh 1">
                
                <img class="img-thumbnail" src="~/img/default-coffee.png" onclick="changeImage(this)" alt="Ảnh 2">
            </div>
        </div>

        <div class="col-md-6">
            <h1 class="fw-bold mb-2" style="color: #3e2723;">@Model.ProductName</h1>
            
            @if(Model.Subcategory != null)
            {
                <span class="badge bg-secondary mb-3">@Model.Subcategory.SubCategoryName</span>
            }

            <p class="product-price">@Model.Price.ToString("N0") đ</p>

            <p class="text-muted" style="line-height: 1.8;">
                @Html.Raw(Model.Decription)
            </p>

            <div class="d-flex align-items-center gap-3 mt-4">
                <a href="#" class="btn btn-add-cart-big shadow">
                    <i class="bi bi-cart-plus-fill"></i> Thêm vào giỏ
                </a>
                <a href="/" class="btn btn-outline-secondary rounded-pill px-4">
                    Tiếp tục mua
                </a>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h3 class="fw-bold mb-4" style="color: #6f4e37; border-left: 5px solid #6f4e37; padding-left: 15px;">
            Sản phẩm cùng loại
        </h3>

        <div class="row row-cols-2 row-cols-md-4 g-3">
            @if (listLienQuan != null && listLienQuan.Any())
            {
                foreach (var item in listLienQuan)
                {
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm related-card">
                             <a href="@Url.Action("Detail", "Home", new { id = item.ProductId })">
                                <img src="@(string.IsNullOrEmpty(item.Img) ? "/img/default.png" : item.Img)" class="card-img-top" alt="@item.ProductName">
                            </a>
                            <div class="card-body text-center">
                                <h6 class="card-title text-truncate">
                                    <a href="@Url.Action("Detail", "Home", new { id = item.ProductId })" class="text-decoration-none text-dark">
                                        @item.ProductName
                                    </a>
                                </h6>
                                <p class="text-danger fw-bold mb-2">@item.Price.ToString("N0") đ</p>
                                <a href="@Url.Action("Detail", "Home", new { id = item.ProductId })" class="btn btn-sm btn-outline-dark rounded-pill">Xem ngay</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">Không có sản phẩm liên quan nào.</p>
            }
        </div>
    </div>
</div>

<script>
    function changeImage(element) {
        // 1. Đổi src của ảnh to thành src của ảnh nhỏ vừa bấm
        document.getElementById('mainImage').src = element.src;
        
        // 2. Xử lý viền (active)
        var thumbs = document.querySelectorAll('.img-thumbnail');
        thumbs.forEach(t => t.classList.remove('active-thumb'));
        element.classList.add('active-thumb');
    }
</script>