@{
    ViewData["Title"] = "Detail";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~\css\styledetail.css" rel="stylesheet" />
<div class="container py-4">
    

    <div class="row g-4">
        <!-- Ảnh sản phẩm -->
        <div class="col-lg-6 col-md-12 text-center">
            <img src="https://product.hstatic.net/1000075078/product/ca-phe-den-da_bf32b13c89fa49c29ec5b193bdbf0b6d_master.png"
                 class="img-fluid rounded shadow-sm"
                 alt="Phin Đen Đá" />
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-lg-6 col-md-12">
            <h6 class="text-secondary mb-1">Highlands Coffee</h6>
            <h3 class="fw-bold">Phin Đen Đá</h3>
            <p>
                <span class="text-dark">Tình trạng:</span> <span class="text-success fw-semibold">Còn hàng</span> |
                <span class="text-dark">Mã SKU:</span> <span class="text-danger">PVN31</span>
            </p>

            <h2 class="text-danger fw-bold mb-4">29.000đ</h2>

            

            <!-- Số lượng -->
            <div class="mb-4">
                <p class="fw-semibold mb-2">Số lượng:</p>
                <div class="input-group" style="width: 140px;">
                    <button class="btn btn-outline-secondary">-</button>
                    <input type="text" class="form-control text-center" value="1">
                    <button class="btn btn-outline-secondary">+</button>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="d-flex gap-3">
                <button class="btn btn-danger px-4 fw-bold">MUA NGAY</button>
                <button class="btn btn-outline-danger px-4 fw-bold">THÊM VÀO GIỎ</button>
            </div>
        </div>
    </div>

    <!-- Mô tả sản phẩm -->
    <div class="mt-5">
        <h4 class="fw-bold border-bottom pb-2">Mô tả sản phẩm</h4>
        <p class="mt-3">
            Phin Đen Đá dành cho những tín đồ cà phê đích thực! Hương vị cà phê truyền thống được phối trộn độc đáo tại Highlands.
            Cà phê đậm đà pha từ Phin, cho thêm 1 thìa đường, mang đến vị cà phê đậm đà chất Phin.
            Đặt Highlands Coffee giao ngay.
        </p>
    </div>

    <!-- Sản phẩm cùng loại -->
    <div class="mt-5">
        <h4 class="text-danger fw-bold mb-3">Sản phẩm cùng loại</h4>
        <div class="row g-3">
            <div class="col-6 col-md-4 col-lg-2 text-center">
                <img src="" class="img-fluid rounded mb-2">
                <p class="mb-0 text-uppercase text-secondary" style="font-size:13px;">My Love Coffee</p>
                <p class="fw-semibold mb-1">Espresso Nóng</p>
                <p class="text-danger fw-bold">45.000đ</p>
            </div>
            <div class="col-6 col-md-4 col-lg-2 text-center">
                <img src="" class="img-fluid rounded mb-2">
                <p class="mb-0 text-uppercase text-secondary" style="font-size:13px;">My Love Coffee</p>
                <p class="fw-semibold mb-1">Latte Nóng</p>
                <p class="text-danger fw-bold">65.000đ</p>
            </div>
            <div class="col-6 col-md-4 col-lg-2 text-center">
                <img src="" class="img-fluid rounded mb-2">
                <p class="mb-0 text-uppercase text-secondary" style="font-size:13px;">My Love Coffee</p>
                <p class="fw-semibold mb-1">Bạc Xỉu Đá</p>
                <p class="text-danger fw-bold">29.000đ</p>
            </div>
        </div>
    </div>
</div>

