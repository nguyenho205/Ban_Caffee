<div class="cart-container">
    <h1 class="cart-title">Giỏ hàng</h1>
    <div class="cart-layout">
        <div class="cart-left">
            <div class="cart-items">
                <div class="cart-item">
                    <button class="remove-item">&times;</button>
                    <img src="..." alt="Bạc Xỉu Đá" class="product-image">
                    <div class="product-details">
                        <p class="product-name">Bạc Xỉu Đá</p>
                    </div>
                    <div class="card-footer">
                        <span class="product-price">45.000₫</span>
                    </div>
                    <div class="quantity-selector">
                        <button class="quantity-btn">-</button>
                        <input type="text" value="1" class="quantity-input">
                        <button class="quantity-btn">+</button>
                    </div>
                </div>
                
            </div>

            <div class="order-notes">
                <label for="notes">Ghi chú đơn hàng</label>
                <textarea id="notes" rows="4"></textarea>
            </div>
        </div>

        <div class="cart-right">
            <div class="order-summary">
                <div class="schedule-section">
                    <h4>HẸN GIỜ NHẬN HÀNG</h4>
                    <div class="schedule-inputs">
                        <div class="input-group">
                            <label for="delivery-date">Ngày nhận hàng</label>
                            <input type="text" id="delivery-date" value="12/10/2025">
                        </div>
                        <div class="input-group">
                            <label for="delivery-time">Thời gian nhận hàng</label>
                            <select id="delivery-time">
                                <option>Chọn thời gian</option>
                                <option>09:00 - 10:00</option>
                                <option>10:00 - 11:00</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="vat-option">
                    <input type="checkbox" id="vat-invoice">
                    <label for="vat-invoice">Xuất hóa đơn</label>
                </div>

                <div class="total-section">
                    <h4>TỔNG CỘNG</h4>
                    <p class="total-price">74.000₫</p>
                    <span class="vat-note">(Đã bao gồm VAT nếu có)</span>
                </div>

                <button class="checkout-button">Thanh Toán</button>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
<h2 class="cart-title" >Sản phẩm bạn có thể thích</h2>

<div class="product-card" data-id="SP001" data-name="Trà Sen Vàng (Củ Năng)" data-price="45000">
    <div class="card-image-container">
        <img src="..." alt="Trà Sen Vàng">
    </div>
    <div class="card-body">
        <h3 class="product-name">Trà Sen Vàng (Củ Năng)</h3>
        <div class="card-footer">
            <span class="product-price">45.000₫</span>
            <button class="add-btn add-to-cart-btn">+</button>
        </div>
    </div>
</div>
</div>
